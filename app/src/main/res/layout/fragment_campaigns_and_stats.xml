<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="20dp"
    android:paddingBottom="8dp"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_height="400dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/topLine"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@drawable/stats"
                android:orientation="vertical">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:gravity="left"
                android:orientation="horizontal"
                android:layout_below="@id/topLine">


            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:id="@+id/imagestats"
                android:padding="10dp"
                android:tint="@color/black"
                android:src="@drawable/ic_campaigns"
                android:background="@drawable/circleblack"
                android:layout_height="50dp"
                android:layout_width="50dp" />

            <TextView
                android:layout_marginTop="23dp"
                android:id="@+id/textView"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/imagestats"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:text="Statistics"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/maybeline"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/linearLayout2">

                <Button
                    android:id="@+id/statsButton"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_button_style"
                    android:text="Discover"
                    android:layout_below="@id/textView"
                    android:textColor="#fff"
                    android:drawableRight="@drawable/ic_send_black_24dp"/>

            </LinearLayout>


            <TextView
                android:paddingLeft="15dp"
                android:layout_below="@id/linearLayout2"
                android:layout_marginTop="-30dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:id="@+id/textView2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat"
                android:textColor="#6c6c6c"
                android:fontFamily="sans-serif-medium"/>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_height="400dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/linearLayoutsecond"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@drawable/campaign_camp"
                android:orientation="vertical">

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutsecond2"
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:layout_below="@id/linearLayoutsecond">


                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="13dp"
                        android:id="@+id/imagecamps"
                        android:padding="10dp"
                        android:tint="@color/black"
                        android:src="@drawable/img_camps_logo"
                        android:background="@drawable/circleblack"
                        android:layout_height="50dp"
                        android:layout_width="50dp" />

                    <TextView
                        android:layout_marginTop="23dp"
                        android:id="@+id/textViewsecond"
                        android:paddingLeft="10dp"
                        android:layout_toRightOf="@+id/imagecamps"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="22sp"
                        android:text="Campaigns"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutsecond3"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/linearLayoutsecond2">

                    <Button
                        android:id="@+id/campsButton"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_button_style"
                        android:text="Discover"
                        android:layout_below="@id/textViewsecond"
                        android:textColor="#fff"
                        android:drawableRight="@drawable/ic_send_black_24dp"/>

                </LinearLayout>

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_below="@id/linearLayoutsecond2"
                    android:layout_marginTop="-30dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/textViewsecond2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat"
                    android:textColor="#6c6c6c"
                    android:fontFamily="sans-serif-medium"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>



</ScrollView>