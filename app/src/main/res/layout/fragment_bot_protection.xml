<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/waiting_group"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loadGIF"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/payment_group"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facial Verification"
            android:textColor="@color/darkgray"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Before you can view and comment on our community blog, we need to verify that you are not a bot."
            android:textAlignment="center"
            android:textColor="@color/darkgray"
            android:textSize="18sp"
            />


        <pl.droidsonroids.gif.GifImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/loadGIF2"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/botver2"
            android:layout_width="220dp"
            android:layout_height="220dp"/>


        <Button
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/verifyBotBtn"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_style"
            android:text="VERIFY NOW   "
            android:layout_below="@id/textViewsecond"
            android:textColor="#fff"
            android:drawableRight="@drawable/ic_wc"/>

    </LinearLayout>

</RelativeLayout>